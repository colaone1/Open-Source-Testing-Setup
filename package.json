{
  "name": "weather-app-fullstack",
  "version": "1.0.0",
  "description": "Weather App with focus on testing and performance",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "npm run test:backend && npm run test:frontend && npm run test:performance",
    "test:backend": "jest tests/backend --coverage",
    "test:frontend": "jest tests/frontend --coverage",
    "test:performance": "jest tests/performance",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "docs": "jsdoc -c jsdoc.json",
    "start": "node index.js",
    "dev": "nodemon index.js",
    "lint": "eslint ."
  },
  "dependencies": {
    "express": "^4.17.1",
    "axios": "^0.21.1",
    "dotenv": "^10.0.0",
    "winston": "^3.11.0",
    "koa": "^2.14.2",
    "koa-router": "^12.0.1",
    "kcors": "^2.2.2",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "jest": "^27.0.6",
    "supertest": "^6.1.3",
    "chai": "^4.3.4",
    "chai-http": "^4.3.0",
    "jsdoc": "^3.6.7",
    "nodemon": "^2.0.12",
    "@babel/core": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "babel-jest": "^27.0.6",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/coverage/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "author": "",
  "license": "MIT"
}
