{
  "name": "weather-app-fullstack",
  "version": "1.0.0",
  "description": "Weather App with focus on testing and performance",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "npm run test:backend && npm run test:frontend && npm run test:performance && npm run test:e2e",
    "test:backend": "jest tests/backend --coverage",
    "test:frontend": "jest tests/frontend --coverage",
    "test:performance": "jest tests/performance",
    "test:e2e": "cypress run",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:snapshot": "jest -u",
    "cypress:open": "cypress open",
    "docs": "jsdoc -c jsdoc.json",
    "start": "node index.js",
    "dev": "nodemon index.js",
    "lint": "eslint ."
  },
  "dependencies": {
    "axios": "^0.21.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "kcors": "^2.2.2",
    "koa": "^2.14.2",
    "koa-router": "^12.0.1",
    "node-fetch": "^3.3.2",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-react": "^7.15.0",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "babel-jest": "^27.0.6",
    "chai": "^4.3.4",
    "chai-http": "^4.3.0",
    "cypress": "^12.17.4",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.5.1",
    "jest-environment-jsdom": "^27.5.1",
    "jsdoc": "^3.6.7",
    "nodemon": "^2.0.12",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=14.0.0"
