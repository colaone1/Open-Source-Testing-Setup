{
  "name": "universal-testing-utils",
  "version": "1.0.0",
  "description": "A comprehensive testing utilities package for modern web applications",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "tsc",
    "lint": "eslint .",
    "docs": "typedoc --out docs src"
  },
  "keywords": [
    "testing",
    "jest",
    "cypress",
    "e2e",
    "unit-testing",
    "integration-testing",
    "performance-testing"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "chai": "^4.3.4",
    "chai-http": "^4.3.0",
    "cypress": "^12.17.4",
    "jest": "^27.5.1",
    "jest-environment-jsdom": "^27.5.1",
    "jest-junit": "^16.0.0",
    "supertest": "^6.3.4"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-typescript": "^7.15.0",
    "@types/jest": "^27.0.0",
    "@types/node": "^16.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "babel-jest": "^27.0.6",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-jest": "^27.0.0",
    "eslint-plugin-react": "^7.33.0",
    "lint-staged": "^13.0.0",
    "prettier": "^2.8.0",
    "ts-jest": "^27.1.5",
    "typedoc": "^0.24.0",
    "typescript": "^4.9.5"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": "^18.3.1"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
